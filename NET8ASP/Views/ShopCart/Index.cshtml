@model ICollection<NET8ASP.Models.Domain.Cart.ShopCartItem>

<div class="container">
    @foreach(var item in Model){
        <div class="alert alert-warning mt-3">
            <b>Товар: </b> @item.Product.Name <br/>
            <b>Цена: </b> @item.Product.Price.ToString("c") <br/>
        </div>
    }
    <a class="btn btn-primary" asp-action="Checkout" asp-controller="Order">Оплатить</a>
</div>
