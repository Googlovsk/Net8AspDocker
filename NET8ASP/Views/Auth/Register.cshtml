@model NET8ASP.Models.ViewModels.UserViewModel
@{
    ViewData["Title"] = "Регистрация";
}
<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="card p-4" style="width: 400px; border-radius: 10px; background-color: #f7f7f7;">
        <h2 class="text-center mb-4">Регистрация</h2>
        <form asp-action="Register" method="post">
            <div class="form-group mb-3">
                <label for="fio">ФИО</label>
                <input asp-for="User.Fio" type="text" class="form-control" id="fio" required />
            </div>
            <div class="form-group mb-3">
                <label for="phone">Телефон</label>
                <input asp-for="User.Phone" type="text" class="form-control" id="phone" required />
            </div>
            <div class="form-group mb-3">
                <label for="login">Логин</label>
                <input asp-for="User.Login" type="text" class="form-control" id="login" required />
            </div>
            <div class="form-group mb-3">
                <label for="password">Пароль</label>
                <input asp-for="User.Password" type="password" class="form-control" id="password" required />
            </div>
            <button type="submit" class="btn btn-primary w-100">Регистрация</button>
        </form>

        <div class="mt-3 text-center">
            <a href="/Auth/Login" class="d-block">Авторизация</a>
        </div>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger mt-3">
                @ViewBag.Error
            </div>
        }
    </div>
</div>
