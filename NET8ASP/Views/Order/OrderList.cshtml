@model NET8ASP.Models.ViewModels.OrderViewModel

<div class="container">
    <div class="list-group">
        <ul class="list-group shadow-sm">
            <li class="list-group-item">
                <h3>Мои заказы</h3>
            </li>
            <li class="list-group-item p-5">
                @if (Model.Orders.Any())
                {
                    @foreach (var order in Model.Orders)
                    {
                        <div class="card shadow-sm mb-4">
                            <div class="card-header">
                                <h5>Заказ № @order.Id от @order.OrderDate.ToString("dd.MM.yyyy HH:mm")</h5>
                            </div>
                            <div class="card-body">
                                <ul class="list-group">
                                    @foreach (var item in order.OrderItems)
                                    {
                                        <li class="list-group-item d-flex justify-content-between align-items-center">
                                            <span>@item.Product.Name</span>
                                            <span>Количество: @item.Quantity</span>
                                            <span>Цена: @item.Price.ToString("c")</span>
                                        </li>
                                    }
                                </ul>
                            </div>
                            <div class="card-footer text-end">
                                <b>Статус: @order.Status</b>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <p class="text-center m-auto">Здесь пока пусто</p>
                }
            </li>
        </ul>
    </div>    
</div>

